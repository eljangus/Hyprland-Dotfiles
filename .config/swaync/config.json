{
    "$schema": "/etc/xdg/swaync/configSchema.json",
    "ignore-gtk-theme" : true,
    "cssPriority" : "user",
    "positionX": "left",
    "positionY": "top",
    "fit-to-screen": false,
    "control-center-margin-top": 22,
    "control-center-margin-bottom": 22,
    "control-center-margin-left": 22,
    "control-center-margin-right": 22,
    "notification-2fa-action": true,
    "timeout": 10,
    "timeout-low": 5,
    "timeout-critical": 0,
    "control-center-preferred-output": "DP-3",
    "notification-window-width": 500,
    "notification-window-height": -1,
    "notification-grouping": true,
    "notification-window-preferred-output": "DP-3",
    "image-visibility": "when-available",
    "transition-time": 0,
    "hide-on-action": false,
    "text-empty": "Keine Benachrichtigungen",
    "control-center-width": 580,
    "fit-to-screen": true,
    "widgets": [
      "mpris",
      "buttons-grid",
      "title",
      "dnd",
      "notifications"
    ],
    "widget-config": {
      "notifications": {
        "vexpand": true
      },
    "title": {
      "text": "Benachrichtigungen",
      "button-text": "󰎟",
      "clear-all-button": true
    },
    "dnd": {
      "text": "Bitte Nicht Stören"
    },
    "mpris": {
     "autohide": false,
     "show-album-art": "always",
     "loop-carousel": true
    },
    "volume": {
     "label": "󰋎",
     "show-per-app": false,
     "show-per-app-icon": true,
     "empty-list-label": "Keine Audioquellen verfügbar",
     "animation-type": "slide_down",
     "animation-duration": 500
    },
    "buttons-grid": {
     "buttons-per-row": 5
    },
    "buttons-grid": {
   "actions" : [
        {
          "active": false,
          "command": "~/.config/waybar/scripts/netzwerk.sh",
          "label": "󰤨",
          "type": "button"
        },
        {
          "active": false,
          "command": "~/.config/waybar/scripts/bluetooth.sh",
          "label": "󰂯",
          "type": "button"
        },
        {
          "active":false,
          "command":"swaync-client -t && hyprshot -m region -o ~/Bilder/Screenshots/ | wl-copy",
          "label":"󰄀",
          "type": "button"
        },
        {
          "active":false,
          "command":"swaync-client -t && obs",
          "label":"󰕧",
          "type": "button"
        },
        {
          "active": false,
          "command": "swaync-client -t && ~/.config/RofiScripts/powermenu/powermenu.sh",
          "label": "",
          "type": "toggle"
        }
    ]
    }
    }
}
